---
import BaseLayout from '../../layouts/BaseLayout.astro';

const projects = [
  { slug: 'aurora', title: 'Aurora', year: 2026, excerpt: 'A cinematic WebGL brand film with scroll-driven reveals.' },
  { slug: 'flux', title: 'Flux', year: 2026, excerpt: 'Interactive product story with realtime lighting and transitions.' },
  { slug: 'nocturne', title: 'Nocturne', year: 2026, excerpt: 'Realtime identity system with generative visuals.' },
];
---

<BaseLayout title="Projects â€” Tale">
  <Fragment slot="head">
    <meta name="tale-accent" content="#40d2ff" />
  </Fragment>

  <div class="mx-auto max-w-6xl px-6 pt-28">
    <div class="flex items-end justify-between gap-6">
      <div>
        <div class="text-xs tracking-[0.25em] text-white/40">PROJECTS</div>
        <h1 class="mt-3 text-4xl md:text-5xl font-semibold">Selected work</h1>
      </div>
    </div>

    <div class="mt-10 grid gap-4 md:grid-cols-2">
      {projects.map((p) => (
        <a href={`/projects/${p.slug}`} class="rounded-2xl border border-white/10 bg-white/5 p-6 hover:bg-white/10 transition">
          <div class="text-xs text-white/40">{p.year}</div>
          <div class="mt-2 text-xl font-semibold">{p.title}</div>
          <div class="mt-2 text-sm text-white/55">{p.excerpt}</div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
