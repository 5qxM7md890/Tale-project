---
import BaseLayout from '../layouts/BaseLayout.astro';

const chapters = [
  { id: 'hero', title: 'Hero', kicker: 'Creative Technology Studio' },
  { id: 'featured', title: 'Selected work', kicker: 'FEATURED' },
  { id: 'capabilities', title: 'Capabilities', kicker: 'CAPABILITIES' },
  { id: 'process', title: 'Process', kicker: 'PROCESS' },
  { id: 'studio', title: 'Studio', kicker: 'STUDIO' },
  { id: 'recognition', title: 'Recognition', kicker: 'RECOGNITION' },
  { id: 'contact', title: 'Let’s talk', kicker: 'CONTACT' },
];
---

<BaseLayout title="Tale Studio">
  <Fragment slot="head">
    <meta name="tale-accent" content="#7c5cff" />
  </Fragment>

  <div class="mx-auto max-w-6xl px-6 pt-28">
    <!-- Chapter 0: Hero -->
    <section
      id={chapters[0].id}
      data-chapter
      data-chapter-index="0"
      class="min-h-[92svh] flex items-center"
    >
      <div class="max-w-2xl">
        <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-white/70">
          <span class="h-1.5 w-1.5 rounded-full bg-white/60"></span>
          {chapters[0].kicker}
        </div>

        <h1 class="mt-6 text-5xl md:text-7xl font-semibold leading-[0.95] tracking-tight">
          Real‑time experiences<br />
          <span class="text-white/45">that feel alive.</span>
        </h1>

        <p class="mt-6 text-base md:text-lg text-white/60 max-w-xl">
          Tale crafts cinematic web experiences combining design, motion, <span class="text-white/80">sound</span>, and WebGL — with meticulous performance and polish.
        </p>

        <div class="mt-8 flex flex-wrap items-center gap-3">
          <a href="/projects" class="rounded-full bg-white px-5 py-2.5 text-sm font-semibold text-black hover:bg-white/90 transition">
            Explore work
          </a>
          <a href="/contact" class="rounded-full border border-white/15 bg-white/5 px-5 py-2.5 text-sm font-semibold text-white/80 hover:bg-white/10 hover:text-white transition">
            Start a project
          </a>
          <div class="ml-2 text-sm text-white/45">Scroll to explore ↓</div>
        </div>
      </div>
    </section>

    <!-- Chapter 1: Featured -->
    <section
      id={chapters[1].id}
      data-chapter
      data-chapter-index="1"
      class="py-20 md:py-28"
    >
      <div class="flex items-end justify-between gap-6">
        <div>
          <div class="text-xs tracking-[0.25em] text-white/40">{chapters[1].kicker}</div>
          <h2 class="mt-3 text-3xl md:text-4xl font-semibold">Selected work</h2>
        </div>
        <a class="text-sm text-white/60 hover:text-white transition" href="/projects">View all →</a>
      </div>

      <div class="mt-10 grid gap-4 md:grid-cols-3">
        {[
          { t: 'Aurora', y: 2026, d: 'A cinematic WebGL brand film with scroll-driven reveals.' },
          { t: 'Flux', y: 2026, d: 'An interactive product story with realtime lighting and transitions.' },
          { t: 'Nocturne', y: 2026, d: 'A realtime identity system with generative visuals.' },
        ].map((p) => (
          <a href="/projects" class="group rounded-2xl border border-white/10 bg-white/5 p-5 hover:bg-white/10 transition">
            <div class="text-xs text-white/40">{p.y}</div>
            <div class="mt-2 text-lg font-semibold text-white/85 group-hover:text-white transition">{p.t}</div>
            <div class="mt-2 text-sm text-white/55">{p.d}</div>
            <div class="mt-4 flex gap-2 text-[11px] text-white/50">
              <span class="rounded-full border border-white/10 bg-black/20 px-2 py-1">WebGL</span>
              <span class="rounded-full border border-white/10 bg-black/20 px-2 py-1">Motion</span>
              <span class="rounded-full border border-white/10 bg-black/20 px-2 py-1">Sound</span>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Chapter 2: Capabilities -->
    <section
      id={chapters[2].id}
      data-chapter
      data-chapter-index="2"
      class="py-20 md:py-28"
    >
      <div class="text-xs tracking-[0.25em] text-white/40">{chapters[2].kicker}</div>
      <h2 class="mt-3 text-3xl md:text-4xl font-semibold">Design × Motion × WebGL</h2>
      <p class="mt-4 text-white/60 max-w-2xl">
        Scroll chapters drive both DOM and 3D. Each section introduces new forms and sound cues — keeping the experience alive.
      </p>

      <div class="mt-10 grid gap-4 md:grid-cols-2">
        {[
          ['Creative Direction', 'Narratives, art direction, systems.'],
          ['Interaction & Motion', 'GSAP-style choreography and transitions.'],
          ['WebGL / Three.js', 'Materials, post‑processing, optimization.'],
          ['Optimization & Production', 'Performance budgets, QA, shipping.'],
        ].map(([a,b]) => (
          <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="text-base font-semibold">{a}</div>
            <div class="mt-2 text-sm text-white/55">{b}</div>
          </div>
        ))}
      </div>

      <a href="/contact" class="inline-flex mt-10 text-sm text-white/70 hover:text-white transition">
        Let’s build something →
      </a>
    </section>

    <!-- Chapter 3: Process -->
    <section
      id={chapters[3].id}
      data-chapter
      data-chapter-index="3"
      class="py-20 md:py-28"
    >
      <div class="text-xs tracking-[0.25em] text-white/40">{chapters[3].kicker}</div>
      <h2 class="mt-3 text-3xl md:text-4xl font-semibold">A disciplined, playful workflow.</h2>

      <div class="mt-10 grid gap-4 md:grid-cols-4">
        {[
          ['01', 'Discover'],
          ['02', 'Design'],
          ['03', 'Build'],
          ['04', 'Polish'],
        ].map(([n,t]) => (
          <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="text-xs text-white/40">{n}</div>
            <div class="mt-2 font-semibold">{t}</div>
            <div class="mt-2 text-sm text-white/55">
              Tight loops between prototype, feel, and performance.
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Chapter 4: Studio -->
    <section
      id={chapters[4].id}
      data-chapter
      data-chapter-index="4"
      class="py-20 md:py-28"
    >
      <div class="text-xs tracking-[0.25em] text-white/40">{chapters[4].kicker}</div>
      <h2 class="mt-3 text-3xl md:text-4xl font-semibold">Small team. Big craft.</h2>
      <p class="mt-4 text-white/60 max-w-2xl">
        Designers, engineers, and sound tinkerers building realtime experiences.
      </p>

      <div class="mt-10 grid gap-4 md:grid-cols-3">
        {['Creative', 'Technology', 'Production'].map((t) => (
          <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="font-semibold">{t}</div>
            <div class="mt-2 text-sm text-white/55">High craft, high performance.</div>
          </div>
        ))}
      </div>
    </section>

    <!-- Chapter 5: Recognition -->
    <section
      id={chapters[5].id}
      data-chapter
      data-chapter-index="5"
      class="py-20 md:py-28"
    >
      <div class="text-xs tracking-[0.25em] text-white/40">{chapters[5].kicker}</div>
      <h2 class="mt-3 text-3xl md:text-4xl font-semibold">Recognition & features.</h2>

      <div class="mt-10 grid gap-4 md:grid-cols-3">
        {['Awwwards', 'CSS Design Awards', 'FWA'].map((t) => (
          <div class="rounded-2xl border border-white/10 bg-white/5 p-6">
            <div class="font-semibold">{t}</div>
            <div class="mt-2 text-sm text-white/55">Awards and editorial features.</div>
          </div>
        ))}
      </div>
    </section>

    <!-- Chapter 6: Contact -->
    <section
      id={chapters[6].id}
      data-chapter
      data-chapter-index="6"
      class="py-20 md:py-28"
    >
      <div class="text-xs tracking-[0.25em] text-white/40">{chapters[6].kicker}</div>
      <div class="rounded-3xl border border-white/10 bg-white/5 p-8 md:p-10">
        <h2 class="text-3xl md:text-4xl font-semibold">Let’s work together.</h2>
        <p class="mt-3 text-white/60 max-w-xl">
          We partner with brands and teams who care about craft.
        </p>
        <div class="mt-8 flex flex-wrap items-center gap-3">
          <a href="/contact" class="rounded-full bg-white px-5 py-2.5 text-sm font-semibold text-black hover:bg-white/90 transition">
            Start a project
          </a>
          <a href="/projects" class="rounded-full border border-white/15 bg-white/5 px-5 py-2.5 text-sm font-semibold text-white/80 hover:bg-white/10 hover:text-white transition">
            View projects
          </a>
        </div>

        <div class="mt-10 text-xs text-white/40">Built with WebGL • Astro • Chapters+Audio • full-v3</div>
      </div>
    </section>
  </div>
</BaseLayout>
